<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Patient's Prescription</h2>
            <small class="text-muted">Welcome to Hospital Management application</small>
        </div>
        <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Prescription Detail</h2>
                            <!-- <ul class="header-dropdown">
                                <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Print Prescription</a></li>
                                        <li role="presentation" class="divider"></li>
                                        <li><a href="javascript:void(0);">Export to XLS</a></li>
                                        <li><a href="javascript:void(0);">Export to CSV</a></li>
                                        <li><a href="javascript:void(0);">Export to XML</a></li>                                    
                                    </ul>
                                </li>
                            </ul> -->
                        </div>
                        <div class="body">
                            <!-- <div class="row clearfix">
                                <div class="col-md-4 col-sm-4">
                                    <h4><img src="assets/images/logo-placeholder.jpg" width="70" alt="velonic"></h4>                                                
                                </div>
                                <div class="col-md-8 col-sm-8">
                                    <h4>Invoice # <br>
                                        <strong>2015-04-5654667546</strong>
                                    </h4>
                                </div>
                            </div> -->
                            <hr>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <address>
                                        <strong>Date:</strong>
                                        {{prescription.date}}<br>
                                        <strong>Doctor:</strong>
                                        {{prescription.doctorname}}<br>

                                    </address>
                                </div>
                                <div class="col-md-6 col-sm-6 text-right">
                                    <p class="m-t-10"><strong>Patient Name: </strong> {{prescription.patientname}}</p>
                                </div>
                            </div>
                            <div class="mt-40"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive">
                                        <table id="mainTable" class="table table-striped" style="cursor: pointer;">
                                            <thead>
                                                <tr>
                                                <th>Medicine Name</th>
                                                <th>Dosage</th>
                                                <th>Frequency</th>
                                                <th>Days</th>
                                                <th>Instruction</th>
                                            </tr>
                                        </thead>
                                            <tbody>
                                                {{#each prescription.medicine}}
                                                <tr>
                                                    <td>{{this.medicine}}</td>
                                                    <td>{{this.dosage}}</td>
                                                    <td>{{this.frequency}}</td>
                                                    <td>{{this.days}}</td>
                                                    <td>{{this.instruction}}</td>
                                          
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <address>
                                        <strong>History:</strong>
                                        {{prescription.history}}<br>
                                    </address>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6">
                                    <address>
                                        <strong>Note:</strong>
                                        {{prescription.note}}<br>

                                    </address>
                                </div>
                            </div>
                            <hr>
                            <div class="hidden-print col-md-12 text-right">
                                <a href="javascript:window.print()" class="btn btn-raised btn-success"><i class="zmdi zmdi-print"></i></a>
                                <!-- <a href="#" class="btn btn-raised btn-default">Submit</a> -->
                            </div>
                        </div>
