        </div>
        <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
          <div class="header">
            <h2>Edit Prescription <!-- <small>Add Allotment Information</small> --> </h2>
            
          </div>
          <form action="/users/submit_add_prescription" method = "POST">
          <div class="body">
                        
                        <div class="row clearfix">
                            <!-- <div class="col-lg-4 col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" placeholder="Prescription Number">
                                    </div>
                                </div>
                            </div> -->
                            <div class="col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" name="Date" class="datepicker form-control" placeholder="Date" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group drop-custum">
                                    <select name="Patient" class="form-control show-tick" required>
                                        <option value="">Select Patient</option>
                                        <option value={{this._id}}>{{this.name}} ({{this.phone}})</option>
                                    </select>     
                                </div>
                            </div>
                            <div class="col-sm-6 col-xs-12">
                                <div class="form-group drop-custum">
                                    <select name="Doctor" class="form-control show-tick" required>
                                        <option value="">Select Doctor</option>
                                        <option value={{this._id}}>{{this.name}}</option>
                                    </select>     
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <textarea rows="4" name="History" class="form-control no-resize" placeholder="History" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <textarea rows="4" name="Note" class="form-control no-resize" placeholder="Note" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="body table-responsive">
                            <table id='myTable' class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                <thead>
                                <tr>
                                    <td>Medicine</td>
                                    <td>Dosage</td>
                                    <td>Frequency</td>
                                    <td>Days</td>
                                    <td>Instruction</td>
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td><input type="text" class="form-control" name='Medicine' placeholder ="Enter Medicine Name" required />{{this.medicine}}</td>
                                    <td><input type="text" class="form-control" name='Dosage' placeholder="100 mg" required /></td>
                                    <td><input type="text" class="form-control" name='Frequency' placeholder="1+0+1" required /></td>
                                    <td><input type="text" class="form-control" name='Days' placeholder="7 Days" required /></td>
                                    <td><input type="text" class="form-control" name='Instruction' placeholder="After Food" required /></td>
                                    <!-- <td><button type="button" class="deletebtn" title="Remove row">Delete</button></td> -->
                                </tr>
                            </tbody>
                            </table>
