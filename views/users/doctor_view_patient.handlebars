<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=Edge">
<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<title>:: View Doctors ::</title>

<link href="/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
<!-- JQuery DataTable Css -->
<link href="/plugins/jquery-datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="/css/main.css" rel="stylesheet">
<!-- Custom Css -->
<link href="/css/themes/all-themes.css" rel="stylesheet" />
</head>

<body class="theme-blue">

<section> 
    <!-- Left Sidebar -->
    <aside id="leftsidebar" class="sidebar">       
       <br>
       <br>
     

       

<div class="menu">
            <ul class="list">
                <li class="header">MAIN NAVIGATION</li>
                <li><a href="/users/doctor_dashboard"><i class="zmdi zmdi-home"></i><span>Dashboard</span></a></li>
                <li class="active open"><a href="/users/doctor_view_patient"><i class="zmdi zmdi-account-o"></i><span>Patient's List</span></a></li>                                            
                <li><a class="menu-toggle"><i class="zmdi zmdi-calendar-check"></i><span>Appointment</span> </a>
                    <ul class="ml-menu">
                        <li><a href="/users/doctor_upcoming_appointments">Upcoming Appointments</a></li>
                        <li><a href="/users/doctor_past_appointments">Past Appointments</a></li>
                        <li><a href="/users/doctor_book_appointment">Book Appointment</a></li>
                    </ul>
                </li>
                <li><a class="menu-toggle"><i class="zmdi zmdi-developer-board"></i><span>Prescription</span> </a>
                    <ul class="ml-menu">
                        <li><a href="/users/doctor_view_prescription">Prescription List</a></li>
                        <li><a href="/users/doctor_add_prescription">Add Prescription</a></li>
                    </ul>
                </li>
                <li><a class="menu-toggle"><i class="zmdi zmdi-filter-frames"></i><span>Report</span> </a>
                    <ul class="ml-menu">
                        <li><a href="/users/doctor_view_birth_report">Birth Report</a></li>
                        <li><a href="/users/doctor_view_operation_report">Operation Report</a></li>
                        <li><a href="/users/doctor_view_expire_report">Expire Report</a></li>
                        <li><a href="/users/doctor_add_report">Add Report</a></li>
                    </ul>
                </li>

                <li><a href="/users/doctor_logout"><i class="zmdi zmdi-sign-in"></i><span>Log Out</span> </a></li>
            </ul>
        </div>
        <!-- #Menu -->
    </aside>
    <!-- #END# Left Sidebar --> 
</section>


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>View Patient</h2>
            <small class="text-muted">Welcome to Hospital Management System</small>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>All Patients</h2>
                    </div>
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                     <th>Options</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Phone</th>
                                    <th>Address</th>
                                    <th>Options</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each files}}
                                <tr>
                                    <td>{{this.name}}</td>
                              
                                    <td>{{this.age}}</td>
                                    <td>{{this.gender}}</td>               
                                    <td>{{this.phone}}</td>
                                    <td>{{this.address}}</td>
                                    <td style="text-align:center; width:400px">
                                        <form style= "display:inline-block;" method="GET" action="/users/patient_view_report/{{this._id}}">
                                    <button class="btn btn-raised" style="background-color: blue; "> <div class="event-name b-greensea" > <a class=" text-muted event-remove" style= "color:white !important"><i class="zmdi zmdi-eye"> Report</i></a> </div></button>
                                    </form>
                                    <!-- <td style="text-align:center; width:100px"> -->
                                        <form style= "display:inline-block;" method="GET" action="/users/patient_view_prescription/{{this._id}}">
                                    <button class="btn btn-raised" style="background-color: blue; "> <div class="event-name b-greensea" > <a class=" text-muted event-remove" style= "color:white !important"><i class="zmdi zmdi-eye"> Prescription</i></a> </div></button>
                                    </form>
                                    <form style= "display:inline-block;" method="GET" action="/users/patient_view_bed_allotment/{{this._id}}">
                                    <button class="btn btn-raised" style="background-color: blue; "> <div class="event-name b-greensea" > <a class=" text-muted event-remove" style= "color:white !important"><i class="zmdi zmdi-eye"> Bed Allotments</i></a> </div></button>
                                    </form></td>
                                </tr>
                                {{/each}}
                   
                       
            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="color-bg"></div>
<!-- Jquery Core Js --> 
<script src="/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
<script src="/bundles/morphingsearchscripts.bundle.js"></script> <!-- morphing search Js --> 
<script src="/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js --> 

<script src="/bundles/datatablescripts.bundle.js"></script><!-- Jquery DataTable Plugin Js -->

<script src="/bundles/mainscripts.bundle.js"></script><!-- Custom Js -->
<script src="/bundles/morphingscripts.bundle.js"></script><!-- morphing search page js --> 
<script src="/js/morphing.js"></script><!-- Custom Js -->  
<script src="/js/pages/tables/jquery-datatable.js"></script>
</body>
</html>