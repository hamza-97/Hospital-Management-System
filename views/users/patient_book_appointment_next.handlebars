<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Book Appointment</h2>
            <small class="text-muted">Welcome to Hospital Management System</small>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>Appointment Information</h2>
                        <small><strong>STEP 2/2</strong></small>

                    </div>
                    <form action="/users/patient_submit_book_appointment_next/{{appointment}}" method = "POST">
                    <div class="body">
                        <div class="row clearfix">   
                            <div class="col-sm-12 col-xs-12">
                                <div class="form-group drop-custum">
                                    <select name="AvailableTimeslots" class="form-control show-tick" required>
                                        <option value="">Select Available Timeslot*</option>
                                        {{# each timeslots}}
                                        <option value={{this}}>{{this}}</option>
                                        {{/each}}
                                    </select>
                                    
                                </div>
                             </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-line">
                                        <textarea name="Remarks" rows="4" class="form-control no-resize" placeholder="Remarks for example Normal Checkup (Optional)"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-raised g-bg-cyan">Submit</button>
                            </div>
                        </div>
                            
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

