       <br>
       <br>

        <!-- Menu -->
        <div class="menu">
            <ul class="list">
                <li class="header">MAIN NAVIGATION</li>
                <li><a href="/users/patient_dashboard"><i class="zmdi zmdi-home"></i><span>Dashboard</span></a></li>                                               
                <li class="active open"><a class="menu-toggle"><i class="zmdi zmdi-calendar-check"></i><span>Appointment</span> </a>
                    <ul class="ml-menu">
                        <li><a href="/users/patient_past_appointments">Past Appointments</a></li>
